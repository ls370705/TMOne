<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hcid.tmone.tmapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".introduction.DestinationActivity"
            android:label="@string/title_activity_destination"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".introduction.PlaceIntroActivity"
            android:label="@string/title_activity_place_intro"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".checklist.CheckListActivity"
            android:label="@string/title_activity_check_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".checklist.ItemActivity"
            android:label="@string/title_activity_item"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".alerts.AlertListActivity"
            android:label="@string/title_activity_alert_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".alerts.AlertActivity"
            android:label="@string/title_activity_alert"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".framework.FrameworkActivity"
            android:label="@string/title_activity_framework"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>

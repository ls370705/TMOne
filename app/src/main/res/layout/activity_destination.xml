<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.hcid.tmone.tmapp.introduction.DestinationActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d3d3d3">

        <RelativeLayout
            android:id="@+id/block1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title1"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:paddingTop="5sp"
                android:paddingStart="18sp"
                android:paddingEnd="0sp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time1"
                android:text="@string/post_time_one"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="5sp"
                android:paddingStart="18sp"
                android:paddingEnd="0sp"
                android:textSize="15sp" />

            <ToggleButton
                android:id="@+id/heart1"
                android:textOn=""
                android:textOff=""
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginStart="0sp"
                android:layout_marginEnd="18sp"
                android:background="@drawable/custom_heart"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:id="@+id/image1"
            android:src="@drawable/img_angkor_wat"
            android:layout_below="@+id/block1"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop" />

        <RelativeLayout android:id="@+id/block2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@+id/image1"
            android:layout_marginTop="10sp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title2"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:paddingTop="5sp"
                android:paddingStart="18sp"
                android:paddingEnd="0sp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time2"
                android:text="@string/post_time_two"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="5sp"
                android:paddingStart="18sp"
                android:paddingEnd="0sp"
                android:textSize="15sp" />

            <ToggleButton
                android:id="@+id/heart2"
                android:textOn=""
                android:textOff=""
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginStart="0sp"
                android:layout_marginEnd="18sp"
                android:background="@drawable/custom_heart"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:id="@+id/image2"
            android:src="@drawable/img_bayon_temple"
            android:layout_below="@+id/block2"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop" />

        <RelativeLayout android:id="@+id/block3"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@+id/image2"
            android:layout_marginTop="10sp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title3"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:paddingTop="5sp"
                android:paddingStart="18sp"
                android:paddingEnd="0sp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time3"
                android:text="@string/post_time_three"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="5sp"
                android:paddingStart="18sp"
                android:paddingEnd="0sp"
                android:textSize="15sp" />

            <ToggleButton
                android:id="@+id/heart3"
                android:textOn=""
                android:textOff=""
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginStart="0sp"
                android:layout_marginEnd="18sp"
                android:background="@drawable/custom_heart"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220sp"
            android:id="@+id/image3"
            android:src="@drawable/img_ta_prohm"
            android:layout_below="@+id/block3"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop" />
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
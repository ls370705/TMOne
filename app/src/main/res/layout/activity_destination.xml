<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d3d3d3"
        tools:context="com.hcid.tmone.tmapp.introduction.DestinationActivity">

        <RelativeLayout android:id="@+id/block1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angkor Wat"
                android:id="@+id/title1"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:paddingTop="5sp"
                android:paddingLeft="20sp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:27"
                android:id="@+id/time1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="5sp"
                android:paddingLeft="20sp"
                android:textSize="15sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:id="@+id/image1"
            android:src="@drawable/img_angkor_wat"
            android:layout_below="@+id/block1"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop" />

        <RelativeLayout android:id="@+id/block2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@+id/image1"
            android:layout_marginTop="10sp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bayon Temple"
                android:id="@+id/title2"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:paddingTop="5sp"
                android:paddingLeft="20sp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:03"
                android:id="@+id/time2"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="5sp"
                android:paddingLeft="20sp"
                android:textSize="15sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:id="@+id/image2"
            android:src="@drawable/img_bayon_temple"
            android:layout_below="@+id/block2"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop" />

        <RelativeLayout android:id="@+id/block3"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@+id/image2"
            android:layout_marginTop="10sp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ta Prohm"
                android:id="@+id/title3"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:paddingTop="5sp"
                android:paddingLeft="20sp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:55"
                android:id="@+id/time3"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="5sp"
                android:paddingLeft="20sp"
                android:textSize="15sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220sp"
            android:id="@+id/image3"
            android:src="@drawable/img_ta_prohm"
            android:layout_below="@+id/block3"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop" />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
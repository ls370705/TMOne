<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6491ca">

        <RelativeLayout android:id="@+id/block1"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:background="#000000">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image1"
                android:src="@drawable/img_angkor_wat"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:alpha=".8" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/image1"
                android:layout_alignTop="@id/image1"
                android:layout_alignRight="@id/image1"
                android:layout_alignBottom="@id/image1"
                android:gravity="center"
                android:text="Cambodia"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <RelativeLayout android:id="@+id/block2"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_below="@+id/block1"
            android:layout_marginTop="10sp"
            android:background="#000000">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image2"
                android:src="@drawable/img_taj_mahal"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:alpha=".8" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/image2"
                android:layout_alignTop="@id/image2"
                android:layout_alignRight="@id/image2"
                android:layout_alignBottom="@id/image2"
                android:gravity="center"
                android:text="India"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <RelativeLayout android:id="@+id/block3"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_below="@+id/block2"
            android:layout_marginTop="10sp"
            android:background="#000000">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image3"
                android:src="@drawable/img_brazil"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:alpha=".8" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/image3"
                android:layout_alignTop="@id/image3"
                android:layout_alignRight="@id/image3"
                android:layout_alignBottom="@id/image3"
                android:gravity="center"
                android:text="Brazil"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <RelativeLayout android:id="@+id/block4"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_below="@+id/block3"
            android:layout_marginTop="10sp"
            android:background="#000000">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image4"
                android:src="@drawable/img_turkey"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:alpha=".8" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/image4"
                android:layout_alignTop="@id/image4"
                android:layout_alignRight="@id/image4"
                android:layout_alignBottom="@id/image4"
                android:gravity="center"
                android:text="Turkey"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <RelativeLayout android:id="@+id/block5"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_below="@+id/block4"
            android:layout_marginTop="10sp"
            android:background="#000000">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image5"
                android:src="@drawable/img_kenya"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:alpha=".8" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/image5"
                android:layout_alignTop="@id/image5"
                android:layout_alignRight="@id/image5"
                android:layout_alignBottom="@id/image5"
                android:gravity="center"
                android:text="Kenya"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#ffffff" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600sp"
    android:background="#ffffff"
    android:fillViewport="true"
    tools:context="com.hcid.tmone.tmapp.account.AccountActivity">


    <ImageView
        android:id="@+id/account_image"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/profile_icon" />

    <TextView
        android:id="@+id/account_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_image"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        android:text="Yin Hung Chen"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/account_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_title"
        android:layout_marginTop="5sp"
        android:gravity="center_horizontal"
        android:text="Taiwan, student"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/account_info"
        android:layout_marginStart="40sp"
        android:layout_marginTop="60sp"
        android:src="@drawable/ic_picture" />

    <TextView
        android:id="@+id/account_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:gravity="left"
        android:paddingStart="32sp"
        android:text="My Photo"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignTop="@+id/account_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60sp"
        android:src="@drawable/ic_checked" />

    <TextView
        android:id="@+id/account_checklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:gravity="center_horizontal"
        android:text="My Checklist"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/account_info"
        android:layout_marginStart="311sp"
        android:layout_marginTop="60sp"
        android:src="@drawable/ic_post" />

    <TextView
        android:id="@+id/account_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:gravity="right"
        android:paddingEnd="39sp"
        android:text="My Post"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>


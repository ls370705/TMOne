<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hcid.tmone.tmapp.WelcomeActivity"
    tools:showIn="@layout/activity_welcome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6491ca">


        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_title_one"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_alignBottom="@+id/app_title_two"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp" />
        <TextView
            android:id="@+id/app_title_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_title_two"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="126dp" />

        <AutoCompleteTextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="50dp"
            android:textStyle="italic"
            android:textSize="20sp"
            android:id="@+id/drop_down"
            android:layout_below="@+id/app_title" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_button_text"
            android:id="@+id/search"
            android:onClick="search"
            android:layout_below="@+id/drop_down"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="50dp"/>

        <RelativeLayout android:id="@+id/block1"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:background="#000000"
            android:layout_below="@+id/search">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image1"
                android:src="@drawable/img_angkor_wat"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:alpha=".8" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/image1"
                android:layout_alignTop="@id/image1"
                android:layout_alignEnd="@id/image1"
                android:layout_alignBottom="@id/image1"
                android:gravity="center"
                android:text="Cambodia"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <RelativeLayout android:id="@+id/block2"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_below="@+id/block1"
            android:layout_marginTop="10sp"
            android:background="#000000">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image2"
                android:src="@drawable/img_taj_mahal"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:alpha=".8" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/image2"
                android:layout_alignTop="@id/image2"
                android:layout_alignEnd="@id/image2"
                android:layout_alignBottom="@id/image2"
                android:gravity="center"
                android:text="@string/india_text"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <RelativeLayout android:id="@+id/block3"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_below="@+id/block2"
            android:layout_marginTop="10sp"
            android:background="#000000">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image3"
                android:src="@drawable/img_brazil"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:alpha=".8" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/image3"
                android:layout_alignTop="@id/image3"
                android:layout_alignEnd="@id/image3"
                android:layout_alignBottom="@id/image3"
                android:gravity="center"
                android:text="@string/brazil_text"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <RelativeLayout android:id="@+id/block4"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_below="@+id/block3"
            android:layout_marginTop="10sp"
            android:background="#000000">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image4"
                android:src="@drawable/img_turkey"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:alpha=".8" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/image4"
                android:layout_alignTop="@id/image4"
                android:layout_alignEnd="@id/image4"
                android:layout_alignBottom="@id/image4"
                android:gravity="center"
                android:text="@string/turkey_text"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <RelativeLayout android:id="@+id/block5"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_below="@+id/block4"
            android:layout_marginTop="10sp"
            android:background="#000000">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image5"
                android:src="@drawable/img_kenya"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:alpha=".8" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/image5"
                android:layout_alignTop="@id/image5"
                android:layout_alignEnd="@id/image5"
                android:layout_alignBottom="@id/image5"
                android:gravity="center"
                android:text="@string/kenya_text"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#ffffff" />

        </RelativeLayout>
    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>

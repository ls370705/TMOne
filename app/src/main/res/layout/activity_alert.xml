<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600sp"
    android:background="#d3d3d3"
    android:fillViewport="true"
    tools:context="com.hcid.tmone.tmapp.alerts.AlertActivity">

    <RelativeLayout
        android:id="@+id/block1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="#ffffff">

        <TextView
            android:id="@+id/incident_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:paddingTop="5sp"
            android:paddingStart="18sp"
            android:paddingEnd="0sp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/incident_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/incident_title"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="5sp"
            android:paddingStart="18sp"
            android:paddingEnd="0sp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/incident_severity"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/block2"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_below="@+id/block1"
        android:layout_marginTop="1sp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/incident_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:paddingTop="5sp"
            android:paddingStart="18sp"
            android:paddingEnd="0sp"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/block3"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@+id/block2"
        android:layout_marginTop="10sp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/comment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:paddingStart="18sp"
            android:textSize="15sp"
            android:text="comment 1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/block4"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@+id/block3"
        android:layout_marginTop="1sp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/comment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:paddingStart="18sp"
            android:textSize="15sp"
            android:text="comment 2"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/block5"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@+id/block4"
        android:layout_marginTop="1sp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/comment3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:paddingStart="18sp"
            android:textSize="15sp"
            android:text="comment 3"/>
    </RelativeLayout>

</RelativeLayout>
